    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#294E7A"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDrinkTittel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Ny drink"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="(* felter må utfylles)"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_back"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_back_top"
                    android:paddingStart="20dp"
                    android:text="Navn*"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNyNavn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Navn på drinken..."
                    android:inputType="textPersonName"
                    android:paddingBottom="10dp"
                    android:paddingEnd="40dp"
                    android:paddingStart="20dp"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rloSprit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_back">

                <ImageButton
                    android:id="@+id/btnRemSpritMinus"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="120dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_action_minus" />

                <ImageButton
                    android:id="@+id/btnAddSpritPlus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    app:srcCompat="@drawable/ic_action_add" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_back_top"
                    android:paddingStart="20dp"
                    android:text="Sprit*"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNySpritType"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:hint="Navn på sprit/ type sprit..."
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/edtNySpritMengde"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:ems="10"
                    android:hint="Mengde..."
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnrNySprit"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="110dp"
                    android:paddingStart="20dp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rloBlandevann"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_back">

                <ImageButton
                    android:id="@+id/btnRemBlandevannMinus"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="80dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_action_minus" />

                <ImageButton
                    android:id="@+id/btnAddBlandevannPlus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    app:srcCompat="@drawable/ic_action_add" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_back_top"
                    android:paddingStart="20dp"
                    android:text="Blandevann"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNyBlandevannNavn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="Navn på blandevann..."
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spnrNyBlandevann"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="70dp"
                    android:paddingStart="20dp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rloEkstra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_back">

                <ImageButton
                    android:id="@+id/btnRemEkstraMinus"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="80dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_action_minus" />

                <ImageButton
                    android:id="@+id/btnAddEkstraPlus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    app:srcCompat="@drawable/ic_action_add" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_back_top"
                    android:paddingStart="20dp"
                    android:text="Ekstra tilbehør"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNyEkstraNavn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:hint="Ingrediens/garnityr/annet..."
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spnrNyEkstra"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="70dp"
                    android:paddingStart="20dp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lilIs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_back"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_back_top"
                    android:paddingStart="20dp"
                    android:text="Type is*"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <Spinner
                    android:id="@+id/spnrNyIs"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:paddingStart="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lilGlass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_back"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_back_top"
                    android:paddingStart="20dp"
                    android:text="Type glass*"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spnrNyGlass"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingStart="20dp" />

                    <ImageView
                        android:id="@+id/imgGlassType"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/tilfeldig" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lilInstruksjoner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_back"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_back_top"
                    android:paddingStart="20dp"
                    android:text="Kommentar"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/edtNyInstruksjoner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Instruksjoner/ beskrivelse..."
                    android:inputType="textMultiLine"
                    android:paddingStart="20dp"
                    android:textAlignment="viewStart"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>